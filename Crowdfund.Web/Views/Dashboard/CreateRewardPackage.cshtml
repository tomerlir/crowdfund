@model Crowdfund.Web.Models.Dashboard.ProjectInfoViewModel

<div class="container" style="margin-top: 90px;">

    <!-- Project Title & Foto-->
    <div class="row">
        <div class="col-12 col-sm-12 col-md-3">
            <div class="card w-100 h-100">
                <div class="card-body">
                    <a asp-action="Index" asp-route-id="@Globals.UserId" class="btn btn-lg btn-warning mb-4 w-100">
                        Back
                    </a>
                </div>
            </div>
        </div>
        <div class="col-12 col-sm-12 col-md-9">
            <div class="card w-100 h-100">
                <div class="card-body">
                    <h5 class="card-title">Create a Reward Package For: @Model.ProjectTitle</h5>
                    <form method="post" class="js-create-reward-form js-form-validations">
                        <div class="form-group">
                            <label for="title">Title</label>
                            <input type="text" name="@Html.NameFor(nm=>nm.RewardOptions.Title)" class="form-control js-title"
                                   data-val="true" data-val-required="Field required" id="title">
                            @Html.ValidationMessageFor(nm => nm.RewardOptions.Title)
                        </div>
                        <div class="form-group">
                            <label for="minAmount">Amount</label>
                            <input type="number" name="@Html.NameFor(nm=>nm.RewardOptions.MinAmount)" class="form-control js-amount"
                                   data-val="true" data-val-required="Field required" id="minAmount">
                            @Html.ValidationMessageFor(nm => nm.RewardOptions.MinAmount)
                        </div>
                        <div class="form-group">
                            <label for="quantity">Quantity</label>
                            <input type="number" name="@Html.NameFor(nm=>nm.RewardOptions.Quantity)" class="form-control js-quantity"
                                   id="quantity" placeholder="Leave empty for unlimited">              
                        </div>
                        <div class="form-group">
                            <label for="description">Description</label>
                            <textarea name="@Html.NameFor(nm=>nm.RewardOptions.Description)" class="form-control js-description"
                                       id="description" rows="8"></textarea>                          
                        </div>
                        <input type="hidden" name="projectId" class="js-projectId" value="@Model.ProjectId" />
                        <button type="button" class="btn btn-lg btn-warning js-createrewardpackage">Create</button>
                        <div class="alert alert-success mt-3 js-create-reward-success-alert" role="alert" style="text-align:center">
                            Reward Package created successfully
                        </div>
                        <div class="alert alert-danger mt-3 js-create-reward-fail-alert" role="alert" style="text-align:center">
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>